@{
    ViewData["Title"] = "ParseQ - Home";
}

<div class="text-center">
    <h1 class="display-4">Welcome to @ViewData["Title"]</h1>
    <p>
        ParseQ is a powerful tool for parsing and analyzing data.
        It provides a user-friendly interface and robust functionality to help you make sense of your data quickly and
        efficiently.
    </p>
</div>

<div class="row">
    <div class="col text-center">
        <h2>Select a file to upload:</h2>
        <form method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <div class="col-md-9">
                    <input
                        type="file"
                        name="file"
                        class="form-control-file form-control"/>
                </div>
                <div class="col-md-3 text-start">
                    <button type="submit" class="btn btn-primary">Upload</button>
                </div>
            </div>
        </form>
    </div>
</div>